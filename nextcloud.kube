[Unit]
Description=quadlet that starts the nextcloud kubernetes pod

[Kube]
AutoUpdate=registry
Yaml=%h/nextcloud-app/nextcloud.yaml

[Service]
WorkingDirectory=%h/nextcloud-app
ExecStartPre=/usr/bin/podman kube play %h/nextcloud-app/nextcloud-redis-secrets.yaml
ExecStartPre=/usr/bin/podman kube play %h/nextcloud-app/nextcloud-db-secrets.yaml
Restart=always

[Install]
WantedBy=multi-user.target
