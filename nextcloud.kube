[Unit]
Description=quadlet that starts the nextcloud kubernetes pod

[Kube]
AutoUpdate=registry
Yaml=/${HOME}/nextcloud-app/nextcloud.yaml
SetWorkingDirectory=yaml

[Service]
ExecStartPre=podman kube play /${HOME}/nextcloud-redis-secrets.yaml
ExecStartPre=podman kube play /${HOME}/nextcloud-db-secrets.yaml
Restart=always

[Install]
WantedBy=multi-user.target