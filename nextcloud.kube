[Unit]
Description=quadlet that starts the nextcloud kubernetes pod

[Kube]
AutoUpdate=registry
Yaml=${HOME}/nextcloud-app/nextcloud.yaml

[Service]
WorkingDirectory=${HOME}/nextcloud-app
ExecStartPre=/usr/bin/podman kube play ${HOME}/nextcloud-app/nextcloud-redis-secrets.yaml
ExecStartPre=/usr/bin/podman kube play ${HOME}/nextcloud-app/nextcloud-db-secrets.yaml
Restart=always

[Install]
WantedBy=multi-user.target
